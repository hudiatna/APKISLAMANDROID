<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:scaleType="centerCrop"
            android:src="@drawable/quran"/>
    </RelativeLayout>
       <Button
           android:id="@+id/btn_jadwalsholat"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="JADWAL SHOLAT" />
       <Button
           android:id="@+id/btn_produk_halal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="PRODUK HALAL"
           />
       <Button
           android:id="@+id/btn_ayat_pilihan"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="AYAT PILIHAN"
           />
       <TextView
           android:textAlignment="center"
           android:layout_gravity="center"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="hudiatna andi"
           android:textColor="#A02014"/>
   </LinearLayout>


</LinearLayout>